{
  "name": "beeracademy-frontend",
  "version": "0.0.0",
  "scripts": {
    "ng": "ng",
    "start": "ng serve",
    "build": "ng build",
    "watch": "ng build --watch --configuration development",
    "test": "ng test",
    "openApi:fetch": "shx mkdir -p ./openapi-spec && shx cp ../backend/build/generated-openapi/openapi.json ./openapi-spec/openapi.json",
    "openApi": "openapi-generator-cli generate -g typescript-angular -i ./openapi-spec/openapi.json -o ./src/api-models --global-property=models",
    "openApi:local": "npm run openApi:fetch && npm run openApi",
    "docker:build": "docker build -t ghcr.io/mathias-m-k/beer-academy-frontend .",
    "docker:run-local": "docker run -d --name beer-academy-frontend -p 8090:80 -e API_URL=http://localhost:8080 ghcr.io/mathias-m-k/beer-academy-frontend",
    "docker:push": "docker push ghcr.io/mathias-m-k/beer-academy-frontend:latest",
    "kubectl:deploy": "kubectl apply -f ../deployment/frontend"
  },
  "prettier": {
    "printWidth": 100,
    "singleQuote": true,
    "overrides": [
      {
        "files": "*.html",
        "options": {
          "parser": "angular"
        }
      }
    ]
  },
  "private": true,
  "packageManager": "npm@10.9.2",
  "dependencies": {
    "@angular/common": "^21.1.0",
    "@angular/compiler": "^21.1.0",
    "@angular/core": "^21.1.0",
    "@angular/forms": "^21.1.0",
    "@angular/platform-browser": "^21.1.0",
    "@angular/router": "^21.1.0",
    "rxjs": "~7.8.2",
    "tslib": "^2.8.1"
  },
  "devDependencies": {
    "shx": "^0.4.0",
    "@angular/build": "^21.1.0",
    "@angular/cli": "^21.1.0",
    "@angular/compiler-cli": "^21.1.0",
    "@openapitools/openapi-generator-cli": "^2.16.3",
    "jsdom": "^27.1.0",
    "typescript": "~5.9.2",
    "vitest": "^4.0.17"
  }
}
